extends ../base.pug

block content
  h3 All Desks
  h5 (Booked desks are at the bottom of this page)

  //- a(href="/desks/add", class='btn btn-success btn-sm')
  //-   i.glyphicon.glyphicon-plus
  //-   span  Add desk

  each desk in desks
    .media
      .desk-card
        a(href=`/desks/${desk.id}`)
          .media-body
            h3= `${desk.name}`
        p Booked? #{desk.booked} 

  if !desks.length
    p No desks found...

  if nextPageToken
    nav
      ul.pager
        li
          a(href=`?pageToken=${encodeURIComponent(nextPageToken)}`) More
